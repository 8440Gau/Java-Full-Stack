package DesignPattern;

import java.util.ArrayList;
import java.util.List;

public class DAODesignPatter {

}

class Students{
	private String name;
	private String rollno;
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getRollno() {
		return rollno;
	}
	public void setRollno(String rollno) {
		this.rollno = rollno;
	}
	public Students(String name, String i) {
		super();
		this.name = name;
		this.rollno = i;
	}
	
	
}

interface stud{
	public Students getStudent(Students rollno);
	public List<Students> getAllstudents();
	public void updateStudents(Students students);
	public void deletestudents(Students rollno);
}

